<Window x:Class="AMorph.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="ExpressionDark.xaml"/>
    </Window.Resources>
    <StackPanel>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="18" FontWeight="Bold">AMorph</TextBlock>
        </StackPanel>
        <Grid Height="210">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition> 
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" ></Image>
            <Image Grid.Column="2" ></Image>   
            <TextBlock Grid.Column="1" Margin="10" HorizontalAlignment="Center">Hello world!</TextBlock>
        </Grid>
        <Button Height="23" Width="100" Content="Close" Click="Button_Click" IsDefault="True"></Button>
    </StackPanel>
</Window>
